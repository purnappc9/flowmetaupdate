{
  "manifest_version": 3,
  "name": "Salesforce Flow XML Editor",
  "version": "1.0",
  "description": "Edit Salesforce Flow XML directly in the Flow Builder.",
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://*.lightning.force.com/*",
    "https://*.my.salesforce.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.lightning.force.com/builder_platform_interaction/flowBuilder.app*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["editor-overlay.js"],
      "matches": ["https://*.lightning.force.com/*"]
    }
  ]
}
